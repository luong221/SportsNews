@model IEnumerable<BTL.Models.category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Danh mục</h2>

<div class="card">
    <div class="card-body">

        <table class="table table-hover">
            <thead>
            <th>
                Danh mục
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Ngày tạo
            </th>
            <th>
                Ngày sửa
            </th>
            <th></th>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>
                        @item.createAt.Date.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.updateAt)
                    </td>
                    <td>
                        <a class="func-link edit-link" href="/articles/edit/@item.id"><i class="fas fa-edit func-icon"></i></a>
                        <a class="func-link details-link" href="/articles/details/@item.id"><i class="fas fa-ellipsis-v func-icon"></i></a>
                        <a class="func-link delete-link" href="/articles/delete/@item.id"><i class="fas fa-trash-alt func-icon"></i></a>
                    </td>
                </tr>
            }

        </table>

    </div>
</div>