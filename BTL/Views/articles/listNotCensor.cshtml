@model IEnumerable<BTL.Models.article>

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<style>
    .censor{
        font-size:1rem;
    }
    .censor:hover{
        color: forestgreen !important;
    }
</style>
<h2>Duyệt bài viết</h2>

<div class="card">
    <div class="card-body">

        <table class="table table-hover">
            <thead>
            <th>
                ID
            </th>
            <th>
                Tác giả
            </th>
            <th>
                Tiêu đề
            </th>
            <th>
                Ảnh
            </th>
            <th>
                Ngày tạo
            </th>
            <th>
                
            </th>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.info.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.title)
                    </td>
                    <td>
                        <img src="~/images/@item.thumbnail" alt="" />
                    </td>
                    <td>
                        @item.createAt.Date.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        <a class="func-link details-link btn-icon" title="Duyệt bài" href="#"><i data-toggle="tooltip" data-placement="top" title="duyệt bài" class="fas fa-clipboard-check censor" index="@item.id"></i></a>
                        <a class="func-link details-link" title="Xem chi tiết" href="/articles/details/@item.id"><i data-toggle="tooltip" data-placement="top" title="xem chi tiết" class="fas fa-ellipsis-v func-icon"></i></a>
                        <a class="func-link delete-link article-remove" index="@item.id" href="#"><i data-toggle="tooltip" data-placement="top" title="xóa bài viết" class="fas fa-trash-alt func-icon"></i></a>
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
