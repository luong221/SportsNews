@model BTL.Models.article
@using BTL.Models
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Tạo Bài Viết</h2>

@using (Html.BeginForm("Create", "Articles", FormMethod.Post, new { enctype = "multipart/form-data" , id = "form-article"})) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    
    <div class="form-group">
        @Html.LabelFor(model => model.categoryId, "Thể loại", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("categoryId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.categoryId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.title, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="keyword">KeyWord</label>
        <div class="col-md-10">
            <select class="form-control select-keyword" name="keyword" id="keyword" multiple="multiple">
            </select>
            <input type="hidden" name="keywordSubmit" id="keywordSubmit"  />
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.thumbnail, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <label class="file-upload-browse btn btn-primary" for="img-file" style="cursor:pointer">Chọn file ảnh</label>
            <input type="file" name="img-file" id="img-file" style="display:none !important;" accept="image/*" />
            <img id="preview" src="#" width="200" height="100" />
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-10">
            <div class="container-content">
                <div id="toolbar-container"></div>
                <div id="editor"></div>
                <input type="hidden" id="description" name="description" />
            </div>
            @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="button" class="btn btn-danger btn-icon-text" id="submit-article">
                <i class="ti-upload btn-icon-prepend"></i>
                Upload
            </button>
        </div>
    </div>

</div>
}

