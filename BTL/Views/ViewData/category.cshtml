@model IEnumerable<BTL.Models.category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Danh mục</h2>

<div class="card">
    <div class="card-body">

        <table class="table table-hover">
            <thead>
            <th>
                Danh mục
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Ngày tạo
            </th>
            <th>
                <a class="btn-icon" href="/categories/create"><i data-toggle="tooltip" data-placement="top" title="Thêm danh mục" class="fa-plus-circle fas"></i></a>
            </th>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>
                        @item.createAt.Date.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        <a class="func-link edit-link" href="/categories/edit/@item.id"><i data-toggle="tooltip" data-placement="top" title="sửa danh mục" class="fas fa-edit func-icon"></i></a>
                        <a class="func-link delete-link" href="/categories/delete/@item.id"><i data-toggle="tooltip" data-placement="top" title="xóa danh mục" class="fas fa-trash-alt func-icon"></i></a>
                    </td>
                </tr>
            }

        </table>

    </div>
</div>